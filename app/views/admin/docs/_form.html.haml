.form-inputs
  = form.input :name, :placeholder => "Page title"
  = form.input :caption, :placeholder => "Title of description"
  = form.input :description
  = form.input :api_version, :placeholder => "1.1.2"
  = form.input :base_path, :placeholder => "http://exmaple.com/api"
  = form.input :request_path, :placeholder => "url for API testing http://api.exmaple.com"
  = form.input :api_key_name, :placeholder => "Querys key of API key"
  = form.input :api_key, :placeholder => "API key for testing"
  = form.input :fqdn, :placeholder => "api.example.com"
.form-actions
  = form.submit :class => "btn btn-primary"
  = link_to "Cancel", request.env["HTTP_REFERER"] || admin_docs, :class => "btn"
= hidden_input_redirect_to

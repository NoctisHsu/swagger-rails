%h1= @api.full_path
.doc_info
  = render_list do |li|
    - li << "description: #{@api.description}"

= link_to "Back", admin_doc_apis_path(@doc), :class => "btn"
= link_to edit_admin_doc_api_path(@doc, @api), :class => "btn" do
  %i.icon-pencil
  Edit

= link_to "Create Operation", new_admin_doc_api_operation_path(@doc, @api), :class => "btn btn-primary"    

%table.table.table-hover
  %thead
    %tr
      %th="#"
      %th="Method"
      %th="nickname"
      %th.last=""
  %tbody
    - @api.operations.each do |operation|
      %tr
        %td= operation.id
        %td= operation.http_method
        %td= operation.nickname
        %td.last
          = link_to edit_admin_doc_api_operation_path(@doc, @api, operation), :class => "btn btn-mini" do
            %i.icon-pencil
            Edit
          = link_to admin_doc_api_operation_path(@doc, @api, operation), :class => "btn btn-mini btn-danger", :method => :delete, :confirm => "confirm delete?" do
            %i.icon-white.icon-remove
            Delete
  